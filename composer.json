{
    "name": "elmar-hinz/typoscript-parser",
    "type": "typo3-cms-extension",
    "description": "Classes to parse TypoScript with double speed.",
    "keywords": [
        "TYPO3",
        "extension",
        "typoscript"
    ],
    "authors": [
        {
            "name": "Elmar Hinz",
            "role": "Developer",
            "email": "t3elmar@gmail.com"
        }
    ],
    "license": [
        "GPL-2.0+"
    ],
    "require": {
        "typo3/cms-core": ">=7.6.0,<9.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.3",
        "jaz303/phake": "^0.6.0"
    },
    "autoload": {
        "psr-4" : {
            "ElmarHinz\\TypoScript\\": "Classes/"
        }
    },
    "autoload-dev": {
        "psr-4" : {
            "ElmarHinz\\TypoScript\\Tests\\": "Tests/",
            "TYPO3\\CMS\\Core\\Tests\\": ".Build/vendor/typo3/cms/typo3/sysext/core/Tests/"
        }
    },
    "replace": {
        "tsparser": "self.version",
        "typo3-ter/tsparser": "self.version"
    },
    "config": {
        "vendor-dir": ".Build/vendor",
        "bin-dir": ".Build/bin"
    },
    "scripts": {
        "post-autoload-dump": [
            "mkdir -p .Build/Web/typo3conf/ext/",
            "[ -L .Build/Web/typo3conf/ext/tsparser ] || ln -snvf ../../../../. .Build/Web/typo3conf/ext/tsparser"
        ]
    },
    "extra": {
        "typo3/cms": {
            "cms-package-dir": "{$vendor-dir}/typo3/cms",
            "web-dir": ".Build/Web"
        }
    }
}
